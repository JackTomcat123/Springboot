<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cn.edu.dao.GradeInfoDao">
	
	<!-- 查询所有年级 -->
	<select id="getGrades" resultType="com.cn.edu.entity.GradeInfo">
		SELECT * FROM GradeInfo
	</select>
	
	<!-- 根据编号获取年级 -->
	<select id="getGradeById" parameterType="int" resultType="com.cn.edu.entity.GradeInfo">
		SELECT * FROM GradeInfo WHERE gradeId=#{gradeId}
	</select>
	
	
	<!-- 添加年级 -->
	<insert id="isAddGrade" parameterType="com.cn.edu.entity.GradeInfo">
		INSERT INTO GradeInfo VALUES(NULL, #{gradeName})
	</insert>
	
	<!-- 删除年级 -->
	<delete id="isDelGrade" parameterType="int">
		DELETE FROM GradeInfo WHERE gradeId=#{gradeId}
	</delete>
	
	<!-- 修改年级信息 -->
	<update id="isUpdateGrade" parameterType="com.cn.edu.entity.GradeInfo">
		UPDATE GradeInfo SET gradeName=#{gradeName} WHERE gradeId=#{gradeId}
	</update>
	
</mapper>